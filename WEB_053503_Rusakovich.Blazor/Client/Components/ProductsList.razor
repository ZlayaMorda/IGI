@using WEB_053503_Rusakovich.Blazor.Client.Models
<h3>ProductsList</h3>
@if (Products == null)
{
     <p>Загрузка ...</p>
}
else
{
    <div class="list-group">
        @{
            var i = 1;
            foreach (var product in Products)
            {
                <button type="button" 
                class="list-group-item list-group-item-action 
                @(SelectedId == product.Id ? "active" : "")" 
                @onclick="@(e => Selected(e, product.Id))">
                    @(i++) - @product.Name
                </button>
            }
        }
    </div>
}

@code {
    [Parameter]
    public IEnumerable<ListViewModel> Products { get; set; }
    [Parameter]
    public EventCallback<IEnumerable<ListViewModel>> ProductsChanged
    {
        get; set;
    }
    private int SelectedId = 0;
    [Parameter]
    public EventCallback<int> SelectedObjectChanged { get; set; }
    private void Selected(MouseEventArgs e, int id)
    {
        SelectedId = id;
        SelectedObjectChanged.InvokeAsync(id);
    }

}